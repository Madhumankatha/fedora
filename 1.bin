int linear_search(int a[],int key,int n)
 {
  for(int i=0;i<n;i++)
   {
    if(a[i]==key)
     {
      delay(100);
      return i+1;
     }
   }
  delay(100);
  return 0;
}
int binary_serach(int a[],int key,int low,int high)
 {
  int mid;
  mid=(low+high)/2;
  if(low>high)
  {
   delay(100);
   return 0;
 }
if(a[mid]==key)
 {
   delay(100);
   return mid+1;
 }
else if(a[mid]>key)
 {
  delay(100);
  return binary_search(a,key,low,mid-1);
}
else
{
delay(100);
return binary_search(a,key,mid+1,high);
 }
