voidmergesort(int a[],intlow,inthigh,int n)
{
	int mid;
	if(low<high)
	{
		delay(200);
		mid=(low+high)/2;
		mergesort(a,low,mid,n);
		mergesort(a,mid+1,high,n);
		merge(a,low,mid,high);
	}
}
void merge(int a[],intlow,intmid,int high)
{
	inti,j,k,h,b[100];
	h=i=low;
	j=mid+1;
	while(h<=mid && j<=high)
	{
		if(a[h]<a[j])
		b[i++]=a[h++];
		else
		b[i++]=a[j++];
	}
	if(h>mid)
	for(k=j;k<=high;k++)
	b[i++]=a[k];
	else
	for(k=h;k<=mid;k++)
	b[i++]=a[k];
	for(k=low;k<=high;k++)
	a[k]=b[k];
}
